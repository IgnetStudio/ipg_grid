doctype
html(lang='en')
  head
    include ./includes/head.pug
  body
    a#skip-nav.screenreader-text(href='#content' tabindex='0')
      | Skip to Content
    aside.helpers
      ul
        li.widget__tooltip-item
          button.toggle__btn.widget__info
          audio#switchOnAudio(src='https://ignet.com.pl/dist/audio/switch-on.mp3' hidden='')
          audio#switchOffAudio(src='https://ignet.com.pl/dist/audio/switch-off.mp3' hidden='')
    main#content.content
      .wrapper
        .err-404
          .err-404__inner
            .err-404__column
              include ./includes/body/spaceman.pug
            .err-404__column
              h1
                span.err-404__number 404
                span.err-404__title Page not found
              div.err-404__wrapper
                p How you got here is a mystery. But you can click the button below to go back to the homepage.
              a(href=pageUrl role='button').btn
                span Home
    script(
      src=gsapUrl
      integrity=gsapPublicKey
      crossorigin='anonymous'
    )
    script(src='https://ignet.com.pl/dist/js/main.js')
    script(src='https://ignet.com.pl/dist/js/animation.js')
