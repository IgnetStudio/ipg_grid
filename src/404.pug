doctype
html(lang='en')
  head
    include ./includes/head.pug
  body
    a#skip-nav.screenreader-text(href='#content' tabindex='0')
      | Skip to Content
    aside.helpers
      ul
        li.widget__tooltip-item
          button.toggle__btn.widget__info
          .widget__tooltip-content
            h5 Dark / light mode
    main#content.content
      .wrapper
        .err-404
          .err-404__inner
            .err-404__column
              include ./includes/body/spaceman.pug
            .err-404__column
              h1 404
              h2 Page not found
              p How you got here is a mystery. But you can click the button below to go back to the homepage.
              a(href=pageUrl role='button').btn
                span Home
    script(
      src=gsapUrl
      integrity=gsapPublicKey
      crossorigin='anonymous'
    )
    script(src='dist/js/main.js')
    script(src='dist/js/animation.js')
