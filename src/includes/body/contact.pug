      li.badge.contact.print-only.widget__tooltip-item
        span.widget__tooltip-item.widget__list-item.link
          a.widget__link(href=pageUrl target='_blank' aria-label='Open ' + pageName + 'website')
            span ignet.com.pl
            svg(viewbox='0 0 16 19')
              polyline(points='0.5 19.5 3 19.5 12.5 10 3 0.5')
          img.widget__info.widget__print-only(src=pathImg + 'link.svg' alt=pageName + ' website')
        .widget__tooltip-content
          img.widget__tooltip-close(src='assets/img/close.svg' alt='Close tooltip' tabindex='0')
