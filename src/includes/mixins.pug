include ./data.pug
mixin headings
  h1 Jerzy Ignatowicz
mixin list-contact-direct
  ul.entry__contact-direct
    li
      a.entry__mail(href=mailUrl aria-label='Email to Ignet')
        img(src=pathImg + 'mail.svg' alt=pageName + ' Mail')
    li
      a.entry__phone(href=phoneUrl aria-label='Call to Ignet')
        img(src=pathImg + 'phone.svg' alt=pageName + ' Phone')
    li
      a(href=whatsappUrl aria-label='Contact Ignet via WhatsApp')
        img(src=pathImg + 'whatsapp.svg' alt=pageName + ' WhatsApp')
    li
      a.entry__cv(href=cvUrl aria-label='Open CV')
        img(src=pathImg + 'cv.svg' alt=pageName + ' CV')
    li
      a.entry__url(href=pageUrl aria-label='Open Ignet website')
        img(src=pathImg + 'cv.svg' alt=pageName + ' website')
mixin list-contact-media
  ul.entry__contact-media
    li
      a(href=facebookUrl aria-label='Open Facebook profile')
        img(src=pathImg + 'facebook.svg' alt=pageName + ' Facebook')
    li
      a(href=twitterUrl aria-label='Open Twitter profile')
        img(src=pathImg + 'twitter.svg' alt=pageName + ' Twitter')
    li
      a(href=youtubeUrl aria-label='Open YouTube Channel')
        img(src=pathImg + 'youtube.svg' alt=pageName + ' YouTube')
    li
      a(href=githubUrl aria-label='Open GitHub profile')
        img(src=pathImg + 'github.svg' alt=pageName + ' GitHub')
    li
      a(href=linkedinUrl aria-label='Open LinkedIn profile')
        img(src=pathImg + 'linkedin.svg' alt=pageName + ' LinkedIn')
    li
      a(href=codepenUrl aria-label='Open CodePen profile')
        img(src=pathImg + 'codepen.svg' alt=pageName + ' CodePen')
    li
      a(href=instagramUrl aria-label='Open Instagram profile')
        img(src=pathImg + 'instagram.svg' alt=pageName + ' Instagram')
