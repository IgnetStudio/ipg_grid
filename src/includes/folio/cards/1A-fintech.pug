include ../badges/dates.pug
include ../badges/strings.pug
//- 1A
article.card(id='1A' data-desktop-src=pathCard + '1A-desktop-preview.gif' data-mobile-src=pathCard + '1A-mobile-preview.gif')
  .card__glows
  .card__thumbnail
    img(src=pathCard + '1A-thumbnail.png' alt=title1A)
  h3.card__title #{title1A}
  .card__header
    .card__list
      ul
        +2024
        +dev-badge
        +js-badge
        +scss-badge
        +rest-badge
  .card__description
    p #{desc1A}
  .card__footer
    a.widget__link.card__button(href=url1A target='_blank' aria-label=desc1A)
      span.card__link #{btn1A}
      +svg-arrow
    .card__bookmark
      button