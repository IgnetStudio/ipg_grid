include ../badges/dates.pug
include ../badges/strings.pug
//- 1A
article.card(id='1A' loading="lazy" data-desktop-src=pathCard + '1A-desktop-preview.gif' data-mobile-src=pathCard + '1A-desktop-preview.gif')
  .card__glows
  .card__thumbnail
    img.card__gif(loading="lazy" src=pathCard + '1A-desktop-preview.gif' alt=title1A)
    img.card__img.hover(loading="lazy" src='assets/img/hoverAlt.svg' alt=hover)
  h3.card__title #{title1A}
  .card__header
    .card__list
      ul
        +react-badge
        +tw-badge
        +figma-badge
        //- +gql-badge
    .card__list
      ul
        +2021
        +2022
        +2023
  .card__description
    p #{desc1A}
  .card__footer
    a.widget__link.card__button(href=url1A target='_blank' aria-label=desc1A)
      span.card__link #{btn1A}
      +svg-arrow
    .card__bookmark
      button