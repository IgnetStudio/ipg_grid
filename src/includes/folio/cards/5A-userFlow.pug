include ../badges/dates.pug
include ../badges/strings.pug
//- 5A
article.card(id='5A' data-desktop-src=pathCard + '5A-desktop-preview.png' data-mobile-src=pathCard + '5A-mobile-preview.png')
  .card__glows
  .card__thumbnail
    img(src=pathCard + '5A-desktop-preview.png' alt=title5A)
  h3.card__title #{title5A}
  .card__header
    .card__list
      ul
        +dev-badge
        +sass-badge
        +js-badge
    .card__list
      ul
        +2017
  .card__description
    p #{desc5A}
  .card__footer
    a.widget__link.card__button(href=url5A target='_blank' aria-label=desc5A)
      span.card__link.hidden #{btn5A}
      +svg-arrow
    .card__bookmark
      button