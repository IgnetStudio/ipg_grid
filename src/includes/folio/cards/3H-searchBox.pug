include ../.././mixins.pug
article.card(data-desktop-src="dist/img/card/3H-desktop-app-preview.gif" data-mobile-src="dist/img/card/3.png" id="3H")
  .card__glows
  .card__thumbnail
    img(src=pathCard + '3H-thumbnail.png' alt='Search Box thumbnail')
  h3.card__title Search Box
  .card__header
    .card__list
      ul
        +2024
        +dev-badge
        +js-badge
        +scss-badge
        +rest-badge
  .card__description
    p Simple, asynchronous search box call with a real REST API call and debouncer
  .card__footer
    a(href=pageUrl role='button').card__button
      span.card__link Link to repo
    .card__bookmark
      button