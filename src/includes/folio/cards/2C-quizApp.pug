include ../badges/dates.pug
include ../badges/strings.pug
//- 2C
article.card(id='2C' data-desktop-src=pathCard + '2C-desktop-preview.gif' data-mobile-src=pathCard + '2C-desktop-preview.gif')
  .card__glows
  .card__thumbnail
    img.card__gif(loading="lazy" src=pathCard + '2C-desktop-preview.gif' alt=title2C)
    img.card__img.hover(loading="lazy" src='assets/img/hoverAlt.svg' alt=hover)
  h3.card__title #{title2C}
  .card__header
    .card__list
      ul
        +dev-badge
        //- +sass-badge
        //- +js-badge
        +ts-badge
        +react-badge
    .card__list
      ul
        +2020
        +2021
  .card__description
    p #{desc2C}
  .card__footer
    a.widget__link.card__button(href=url2C target='_blank' aria-label=desc2C)
      span.card__link #{btn2C}
      +svg-arrow
    .card__bookmark
      button