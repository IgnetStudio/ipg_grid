include ../badges/dates.pug
include ../badges/strings.pug
//- 3C
article.card(id='3C' data-desktop-src=pathCard + '3C-desktop-preview.gif' data-mobile-src=pathCard + '3C-mobile-preview.gif')
  .card__glows
  .card__thumbnail
    img(src=pathCard + '3C-desktop-preview.gif' alt=title3C)
  h3.card__title #{title3C}
  .card__header
    .card__list
      ul
        +dev-badge
        +sass-badge
        +js-badge
    .card__list
      ul
        +2017
  .card__description
    p #{desc3C}
  .card__footer
    a.widget__link.card__button(href=url3C target='_blank' aria-label=desc3C)
      span.card__link.hidden #{btn3C}
      +svg-arrow
    .card__bookmark
      button