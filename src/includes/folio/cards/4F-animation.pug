article.card(id='4F' data-desktop-src=pathCard + '4F-desktop-preview.gif' data-mobile-src=pathCard + '4F-mobile-preview.gif')
  .card__glows
  .card__thumbnail
    img(src=pathCard + '4F-desktop-preview.gif' alt=title4F)
  h3.card__title #{title4F}
  .card__header
    .card__list
      ul
        +dev-badge
        +sass-badge
        +js-badge
    .card__list
      ul
        +2017
  .card__description
    p #{desc4F}
  .card__footer
    a.widget__link.card__button(href=url4F target='_blank' aria-label=desc4F)
      span.card__link.hidden #{btn4F}
      +svg-arrow
    .card__bookmark
      button