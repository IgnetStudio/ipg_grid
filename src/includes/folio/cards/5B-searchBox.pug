include ../badges/dates.pug
include ../badges/strings.pug
//- 5B
article.card(id='5B' data-desktop-src=pathCard + '5B-desktop-preview.gif' data-mobile-src=pathCard + '5B-desktop-preview.gif')
  .card__glows
  .card__thumbnail
    img.card__gif(loading="lazy" src=pathCard + '5B-desktop-preview.gif' alt=title5B)
    img.card__img.hover(loading="lazy" src='assets/img/hoverAlt.svg' alt=hover)
  h3.card__title #{title5B}
  .card__list
    ul
      +dev-badge
      +rest-badge
      +js-badge
  .card__list
    ul
      +2021
  .card__description
    p #{desc5B}
  .card__footer
    a.widget__link.card__button(href=url5B target='_blank' aria-label=desc5B)
      span.card__link #{btn5B}
      +svg-arrow
    .card__bookmark
      button.selected