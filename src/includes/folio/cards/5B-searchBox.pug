include ../badges/dates.pug
include ../badges/strings.pug
//- 5B
article.card(id='5B' data-desktop-src=pathCard + '5B-desktop-app-preview.gif' data-mobile-src=pathCard + '5B-mobile-app-preview.gif')
  .card__glows
  .card__thumbnail
    img(src=pathCard + '5B-thumbnail.png' alt=title5B)
  h3.card__title #{title5B}
  .card__header
    .card__list
      ul
        +2024
        +dev-badge
        +js-badge
        +scss-badge
        +rest-badge
  .card__description
    p #{desc5B}
  .card__footer
    a.widget__link.card__button(href=url5B target='_blank' aria-label=desc5B)
      span.card__link #{btn5B}
      +svg-arrow
    .card__bookmark
      button