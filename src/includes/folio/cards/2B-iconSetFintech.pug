article.card(id='2B' data-desktop-src=pathCard + '2B-desktop-preview.gif' data-mobile-src=pathCard + '2B-mobile-preview.gif')
  .card__glows
  .card__thumbnail
    img(src=pathCard + '2B-desktop-preview.gif' alt=title2B)
  h3.card__title #{title2B}
  .card__header
    .card__list
      ul
        +dev-badge
        +sass-badge
        +js-badge
    .card__list
      ul
        +2017
  .card__description
    p #{desc2B}
  .card__footer
    a.widget__link.card__button(href=url2B target='_blank' aria-label=desc2B)
      span.card__link.hidden #{btn2B}
      +svg-arrow
    .card__bookmark
      button