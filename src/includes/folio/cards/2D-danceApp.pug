include ../badges/dates.pug
include ../badges/strings.pug
//- 2D
article.card(id='2D' data-desktop-src=pathCard + '2D-desktop-preview.png' data-mobile-src=pathCard + '2D-mobile-preview.png')
  .card__glows
  .card__thumbnail
    img.card__gif(loading="lazy" src=pathCard + '2D-mobile-preview.png' alt=title2D)
    img.card__img(loading="lazy" src=pathCard + '2D-desktop-preview.png' alt=title2D)
  h3.card__title #{title2D}
  .card__header
    .card__list
      ul
        +design-badge
        +figma-badge
    .card__list
      ul
        +2025
  .card__description
    p #{desc2D}
  .card__footer
    a.widget__link.card__button(href=url2D target='_blank' aria-label=desc2D)
      span.card__link #{btn2D}
      +svg-arrow
    .card__bookmark
      button