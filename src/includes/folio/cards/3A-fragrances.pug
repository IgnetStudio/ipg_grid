include ../badges/dates.pug
include ../badges/strings.pug
//- 3A
article.card(id='3A' data-desktop-src=pathCard + '3A-desktop-preview.gif' data-mobile-src=pathCard + '3A-mobile-preview.gif')
  .card__glows
  .card__thumbnail
    img(src=pathCard + '3A-thumbnail.png' alt=title3A)
  h3.card__title #{title3A}
  .card__header
    .card__list
      ul
        +2024
        +dev-badge
        +js-badge
        +scss-badge
        +rest-badge
  .card__description
    p #{desc3A}
  .card__footer
    a.widget__link.card__button(href=url3A target='_blank' aria-label=desc3A)
      span.card__link #{btn3A}
      +svg-arrow
    .card__bookmark
      button