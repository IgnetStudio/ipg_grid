include ../badges/dates.pug
include ../badges/strings.pug
//- 4C
article.card(id='4C' data-desktop-src=pathCard + '4C-desktop-preview.png' data-mobile-src=pathCard + '4C-mobile-preview.png')
  .card__glows
  .card__thumbnail
    img(src=pathCard + '4C-desktop-preview.png' alt=title4C)
  h3.card__title #{title4C}
  .card__header
    .card__list
      ul
        +dev-badge
        +ws-badge
        +js-badge
    .card__list
      ul
        +2020
  .card__description
    p #{desc4C}
  .card__footer
    a.widget__link.card__button(href=url4C target='_blank' aria-label=desc4C)
      span.card__link.hidden #{btn4C}
      +svg-arrow
    .card__bookmark
      button