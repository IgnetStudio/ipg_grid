include ../badges/dates.pug
include ../badges/strings.pug
//- 5C
article.card(id='5C' data-desktop-src=pathCard + '5C-desktop-preview.gif' data-mobile-src=pathCard + '5C-desktop-preview.gif')
  .card__glows
  .card__thumbnail
    img.card__gif(loading="lazy" src=pathCard + '5C-desktop-preview.gif' alt=title5C)
    img.card__img.hover(loading="lazy" src='assets/img/hoverAlt.svg' alt=hover)
  h3.card__title #{title5C}
  .card__header
    .card__list
      ul
        +dev-badge
        +js-badge
        //- +gql-badge
    .card__list
      ul
        +2018
  .card__description
    p #{desc5C}
  .card__footer
    a.widget__link.card__button(href=url5C target='_blank' aria-label=desc5C)
      span.card__link #{btn5C}
      +svg-arrow
    .card__bookmark
      button